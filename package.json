{
	"name": "@piotrzaborow/notion-react-renderer",
	"version": "1.0.0",
	"description": "React Renderer for @notionhq/client blocks",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/piotrzaborow/notion-react-renderer.git"
	},
	"scripts": {
		"commit": "cz",
		"build": "babel src -d dist"
	},
	"author": "Piotr Zaborowski <piotrzaborow@gmail.com>",
	"license": "ISC",
	"peerDependecies": {
		"react": "^17.0.2"
	},
	"dependencies": {
		"react": "^17.0.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/preset-env": "^7.14.7",
		"@babel/preset-react": "^7.14.5",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			[
				"@semantic-release/github",
				{
					"message": "Release <%= nextRelease.version %> - <%= new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %> [skip ci]\n\n<%= nextRelease.notes %>"
				}
			]
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
